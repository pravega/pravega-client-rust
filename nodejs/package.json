{
  "name": "pravega",
  "version": "0.3.0",
  "description": "Pravega client",
  "main": "dist/stream_manager.js",
  "scripts": {
    "build": "cargo-cp-artifact -ac pravega_nodejs ./pravega.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "npm run build -- --release",
    "release": "npm run build-release && npx tsc && mv ./pravega.node ./dist/pravega.node",
    "test": "node --loader ts-node/esm --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand"
  },
  "author": "Pravega Community",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "cargo-cp-artifact": "^0.1",
    "chai": "*",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pravega/pravega-client-rust.git"
  },
  "keywords": [
    "streaming",
    "client",
    "pravega"
  ],
  "bugs": {
    "url": "https://github.com/pravega/pravega-client-rust/issues"
  },
  "homepage": "https://github.com/pravega/pravega-client-rust#readme",
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
